<%= form_with(model: director) do |form| %>
  <% if director.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(director.errors.count, "error") %> proibiu que esse diretor fosse salvo:</h2>

      <ul>
        <% director.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :nationality, style: "display: block" %>
    <%= form.text_field :nationality %>
  </div>

  <div>
    <%= form.label :date_birth, style: "display: block" %>
    <%= form.date_field :date_birth %>
  </div>

  <div>
    <%= form.label :gender_id, style: "display: block" %>
    <%= form.collection_select(:gender_id, Gender.all, :id, :name) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
