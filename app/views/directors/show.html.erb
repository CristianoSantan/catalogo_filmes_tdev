<p style="color: green"><%= notice %></p>

<p><strong>Nome:</strong> <%= @director.name %></p>
<p><strong>Nacionalidade:</strong> <%= @director.nationality %></p>
<p><strong>Nascimento:</strong> <%= @director.date_birth %></p>
<p><strong>Genero:</strong> <%= @director.gender.name %></p>

<div>
  <%= link_to "Editar", edit_director_path(@director) %> |
  <%= link_to "Voltar", directors_path %>

  <%= button_to "Deletar", @director, method: :delete %>
</div>

<h3>Filmes Produzidos</h3>

<ul>
<% @movies.each do |movie| %>
  <li>
    <%= link_to movie.title, movie %>
  </li>
  <% end %>
</ul>
